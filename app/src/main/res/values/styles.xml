<resources>

    <!-- Base application theme. -->

    <style name="Bounce" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/bounce_enter</item>
        <item name="android:windowExitAnimation">@anim/bounce_exit</item>
    </style>

    <style name="TextSubhead">
        <item name="android:textColor">?attr/text_subhead</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextTitle">
        <item name="android:textColor">?attr/text_title</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBody">
        <item name="android:textColor">?attr/text_body</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="timelinePicture">
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
