<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground"
    android:orientation="vertical"
    android:tag="layout/item_feed_base_0">

    <FrameLayout
        android:id="@+id/feed_content_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/replay_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4.0dip"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingTop="4.0dip"
        android:tag="binding_1"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingBottom="4.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:tag="binding_2"
            android:visibility="gone">

            <ImageView
                android:layout_width="18.0dip"
                android:layout_height="18.0dip"
                android:layout_marginTop="5.0dip"
                android:tag="binding_3" />

            <TextView
                android:id="@+id/like_thumb_view"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.0dip"
                android:layout_marginTop="4.0dip"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:tag="binding_4" />

            <ImageView
                android:id="@+id/like_text_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="-4.0dip"
                android:layout_marginTop="2.0dip"
                android:rotation="90.0"
                android:tag="binding_5" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginTop="-2.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:tag="binding_6"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/feed_reply_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="4.0dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginTop="-2.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:tag="binding_7"
            android:visibility="gone" />

        <TextView
            android:id="@+id/more_comment_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2.0dip"
            android:background="?android:selectableItemBackground"
            android:paddingBottom="6.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="6.0dip"
            android:tag="binding_8"
            android:textColor="?android:textColorSecondary"
            android:textColorLink="?colorPrimaryDark"
            android:textSize="12.0sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>